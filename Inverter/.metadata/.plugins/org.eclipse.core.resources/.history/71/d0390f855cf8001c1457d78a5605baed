#ifndef HALL_SENSORS_H_
#define HALL_SENSORS_H_


extern volatile int8_t sector = 0;
extern volatile int8_t direction = 0;              // direction +1/-1 -> CW and CCW

extern volatile uint32_t time_since_A = 0;	// time between to edges Hall A
extern volatile uint32_t time_since_B = 0; // time between to edges Hall B
extern volatile uint32_t time_since_C = 0; // time between to edges Hall C
extern volatile uint32_t time_180deg = 1000;        // time which last triggered HAL sensor needed for 180Â°
extern volatile char last_Hall_trig;			//last triggered Hall Sensor A/B/C

void Hall_init(void);

#endif /* HALL_SENSORS_H_ */
